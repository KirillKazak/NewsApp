<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentationKaverdram.openedNewsKaverdram.OpenedNewsFragmentKaverdram"
    android:background="@drawable/main_bg_night_kavedarm">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="16dp"
        android:layout_height="20dp"
        android:id="@+id/btnGoBackOpenedNewsKaverdram"
        android:background="@drawable/back_arrow_kaverdarm"
        app:layout_constraintTop_toTopOf="@id/tvOpenedNewsTitleKaverdarm"
        app:layout_constraintBottom_toBottomOf="@id/tvOpenedNewsTitleKaverdarm"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvOpenedNewsTitleKaverdarm"
        tools:text="tvOpenedNewsTitleKaverdarm"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_medium_kaverdam"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnGoBackOpenedNewsKaverdram"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/ivOpenedNewsImgKaverdarm"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvOpenedNewsTitleKaverdarm"
        android:layout_marginTop="12dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOpenedNewsDateKaverdarm"
        tools:text="10/12/2022"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_medium_kaverdam"
        app:layout_constraintBottom_toBottomOf="@id/ivOpenedNewsImgKaverdarm"
        app:layout_constraintStart_toStartOf="@id/ivOpenedNewsImgKaverdarm"
        android:layout_margin="12dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivOpenedNewsImgKaverdarm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tvOpenedNewsContentKaverdarm"
            tools:text="A brief description of what is contained in this news release. It is written about what this news is about."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto_regular_kaverdam" />
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/btnBookmarkOpenedNewsKaverdarm"
        android:background="@drawable/read_later_no_active_caverdram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>