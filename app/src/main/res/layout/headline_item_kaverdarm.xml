<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headlineItemCLKaverdarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="12dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivHeadlineImgKaverdarm"
        tools:background="#423F3F"
        tools:ignore="ContentDescription"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeadlineTitleKaverdarm"
        tools:text="Headline of the news"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:fontFamily="@font/roboto_medium_kaverdam"
        app:layout_constraintStart_toStartOf="@id/ivHeadlineImgKaverdarm"
        app:layout_constraintEnd_toStartOf="@id/tvHeadlineDateKaverdarm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeadlineDateKaverdarm"
        tools:text="12/03/2022"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_medium_kaverdam"
        app:layout_constraintEnd_toEndOf="@id/ivHeadlineImgKaverdarm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>